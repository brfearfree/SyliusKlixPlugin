<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <defaults public="true" autoconfigure="false" autowire="false"/>

        <service id="whitedigital.klix_plugin.gateway_factory" class="Payum\Core\Bridge\Symfony\Builder\GatewayFactoryBuilder">
            <argument>WgiteDigital\SyliusKlixPlugin\KlixGatewayFactory</argument>
            <tag name="payum.gateway_factory_builder" factory="klix"/>
        </service>

    </services>
</container>
